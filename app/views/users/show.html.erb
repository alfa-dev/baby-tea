<% if @user_products.count > 0 %>
	<% title = (@user_products.count > 1) ? 'Meus presentes' : 'Meu presente' %>
	<%= render partial: 'products/product_list', locals: { category: title, products: @user_products } %>
<% else %>
	<section class="empty-list gift-list">
		<h2>Sacola de presentes vazia <br>😞</h2>
		<%= link_to "Vazio", user_how_to_gift_path(current_user), class: "empty-gift" %>
		<p><%= link_to "Clique aqui", products_path %> para ver a lista de presentes completa.</p>
	</section>
<% end %>

